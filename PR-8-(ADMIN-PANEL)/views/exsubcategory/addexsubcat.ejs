      <!-- Row -->
      <div class="row">
          <!-- Column -->
          <div class="col-lg-12 col-xlg-12 col-md-12">
              <div class="card">
                  <div class="card-body">
                      <form class="form-horizontal form-material mx-2" method="post" action="/exsubcategory/exsubaddCategory">
                        <div class="form-group">
                          <label class="col-sm-12">Select Category</label>
                          <div class="col-sm-12 border-bottom">
                              <select name="category"  onchange="selectrecord()" id="category" class="form-select shadow-none ps-0 border-0 form-control-line">
                                <option value="">-----select-option--</option>
                                <% category.map((cat)=>{ %>
                                  <option value="<%= cat._id %>">
                                      <%= cat.category %>
                                  </option>
                                  <% }) %>
                              </select>
                          </div>
                      </div>
                        <div class="form-group">
                          <label class="col-sm-12">Select Sub Category</label>
                          <div class="col-sm-12 border-bottom">
                              <select name="subcategory" id="subcat" class="form-select shadow-none ps-0 border-0 form-control-line">
                                
                              </select>
                          </div>
                      </div>
                          <div class="form-group">
                              <label class="col-md-12 mb-0">Ex Sub Category Name</label>
                              <div class="col-md-12">
                                  <input type="text" name="exsubcategory"  placeholder="Ex Sub category"
                                      class="form-control ps-0 form-control-line">
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-sm-12 d-flex">
                                  <button type="submit" class="btn btn-success mx-auto mx-md-0 text-white">Add Ex Sub Category</button>
                              </div>
                          </div>
                      </form>
