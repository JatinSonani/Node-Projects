<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Books</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet">
    </head>
    <body>
        <div class="container mt-5">
            <h2 class="text-center">Books List</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Pages</th>
                        <th>Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.name %></td>
                        <td><%= book.price %></td>
                        <td><%= book.pages %></td>
                        <td><%= book.author %></td>
                        <td>
                            <a href="/edit/<%= book._id %>"
                                class="btn btn-warning">Edit</a>
                            <form action="/delete/<%= book._id %>" method="POST"
                                class="d-inline">
                                <button type="submit"
                                    class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/add" class="btn btn-primary">Add Book</a>
            </div>
        </div>
    </body>
</html>