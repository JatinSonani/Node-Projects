<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Book Store</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet">
    </head>
    <style>
        body {
            background-image: url(https://marketplace.canva.com/EAE5LpS1cKA/1/0/1600w/canva-beige-reading-book-motivational-desktop-wallpaper-KEmFgDG0z8M.jpg);
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat; 
            background-attachment: fixed; 
            height: 100%; 
            margin: 0;
            font-family: Georgia, 'Times New Roman', Times, serif;
            }
        .form-label{
            font-size: 25px;
             }

        
    </style>

    <body>
        <div class="container mt-3">
            <h2 class="text-center mb-4 fw-bold">Add Book</h2>
            <form action="/insertBook" method="post" class="row g-3">
                <div class="col-md-6 offset-md-3">
                    <div class="mb-3">
                        <label for="name" class="form-label fw-bold">Book
                            Name</label>
                        <input type="text" class="form-control" id="name"
                            name="book_name" placeholder="Enter book name">
                    </div>

                    <div class="mb-3">
                        <label for="price"
                            class="form-label fw-bold">Price</label>
                        <input type="number" class="form-control" id="price"
                            name="book_price" placeholder="Enter book price">
                    </div>

                    <div class="mb-3">
                        <label for="pages"
                            class="form-label fw-bold">Pages</label>
                        <select class="form-select fw-semibold" id="pages"
                            name="book_pages">
                            <option class="fw-semibold" selected>---- Select
                                Pages ----</option>
                            <option value="100-200">100-200</option>
                            <option value="200-300">200-300</option>
                            <option value="300-400">300-400</option>
                            <option value="400-500">400-500</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="author"
                            class="form-label fw-bold">Author</label>
                        <input type="text" class="form-control" id="author"
                            name="book_author" placeholder="Enter book author">
                    </div>

                    <div class="mb-3 text-center">
                        <button type="submit"
                            class="btn btn-primary mt-3 fs-5 fw-bold px-4 py-2 ">Add
                            Book</button>
                    </div>
                </div>
            </form>
            <h3 class="text-center mt-3 fs-1 fw-bold">Book List</h3>
            <div class="row justify-content-center rounded">
                <div class="col-md-8">
                    <table class="table table-bordered fw-semibold mt-3">
                        <thead>
                            <tr>
                                <th>Book Name</th>
                                <th>Price</th>
                                <th>Pages</th>
                                <th>Author</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% books.forEach(book => { %>
                            <tr>
                                <td><%= book.book_name %></td>
                                <td><%= book.book_price %></td>
                                <td><%= book.book_pages %></td>
                                <td><%= book.book_author %></td>
                                <td>
                                    <a href="/deleteRecord/<%= book._id %>"
                                        class="btn btn-danger btn-sm ">Delete</a>
                                    <a href="/editRecord/<%= book._id %>"
                                        class="btn btn-warning btn-sm">Edit</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>
