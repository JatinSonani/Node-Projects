<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Rustic Bean Login Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <style>
        body {
            background-image:url(../assets/admin/layout/img/back.jpeg);
            width: 100%;
            color: #fff;
            font-family: 'Arial', sans-serif;
        }

        .container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .card {
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.85);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        .form-label {
            color: #555;
            font-weight: bold;
        }

        .btn-primary {
            background: linear-gradient(90deg, #007bff, #00bfff);
            border: none;
            transition: background 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(90deg, #0056b3, #008bdb);
        }

        .btn-secondary {
            background: linear-gradient(90deg, #6c757d, #adb5bd);
            border: none;
            transition: background 0.3s ease;
        }

        .btn-secondary:hover {
            background: linear-gradient(90deg, #495057, #6c757d);
        }

        .alert {
            animation: fadeIn 0.5s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo {
            max-height: 80px;
            margin-bottom: 30px; 
        }

    </style>
</head>

<body>
    <div class="container">
        <img src="../assets/admin/layout/img/brand logo-2.png" alt="Company-Logo" class="img-fluid mb-5" style="max-height: 200px;" />

        <div class="card">
            <div class="card-body">
                <h3 class="text-center mb-4">Login</h3>
                <div id="errorAlert" class="alert alert-danger d-none" role="alert"></div>
                <div id="successAlert" class="alert alert-success d-none" role="alert"></div>
                <form id="loginForm" action="/login" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" required />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
                    <a href="/register" class="btn btn-secondary w-100">Register</a>
                </form>
            </div>
        </div>
    </div>

    <script>
       document.getElementById('loginForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();

            if (!email || !password) {
                showError('Please fill out both fields.');
                return;
            }

            if (!validateEmail(email)) {
                showError('Please enter a valid email address.');
                return;
            }
            
            this.submit();
        });

        function showError(message) {
            const alert = document.getElementById('errorAlert');
            alert.textContent = message;
            alert.classList.remove('d-none');
        }

        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }
    </script>
</body>
</html>